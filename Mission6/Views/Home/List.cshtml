@{
}

@model List<Application> 

<table class="table table-bordered">
    <thread class="fw-bold">
        <tr>
            @* <td>ApplicationID</td> *@
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>LentTo</td>
            <td>Notes</td>
            <td>Edited</td>
        </tr>
    </thread>

    @foreach (var x in Model)
    {
        <tbody>
            <tr>
                @* <td>@x.ApplicationID</td> *@
                <td>@x.Category</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
                <td>@x.Edited</td>

                <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.ApplicationID">Edit</a></td>
                <td> <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.ApplicationID">Delete </a></td>
            </tr>
            
        </tbody>
    }
  

</table>
